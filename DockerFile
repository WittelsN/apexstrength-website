# Use official PHP image with Apache
FROM php:8.1-apache

# Enable mod_rewrite for clean URLs (if needed)
RUN a2enmod rewrite

# Copy project files to Apache root
COPY . /var/www/html/

# Set permissions
RUN chown -R www-data:www-data /var/www/html/

# Expose Apache port
EXPOSE 80

# Start Apache server
CMD ["apache2-foreground"]
